<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mPic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:failureImage="@drawable/ic_logo"
        app:placeholderImage="@drawable/ic_logo" />


    <RelativeLayout
        android:id="@+id/mLayout_Integral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/mPic2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:failureImage="@drawable/bg_integral"
            app:placeholderImage="@drawable/bg_integral" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_39"
                android:text="垃圾投放奖励积分规则"
                android:textColor="@color/black_title"
                android:textSize="@dimen/dp_9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_51"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralZhiZhang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="纸张：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_ZhiZhang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralSuLiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="塑料：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_SuLiao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralBoLi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="玻璃：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_BoLi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralFangZhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="纺织：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_FangZhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralJinShu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="金属：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />


                        <TextView
                            android:id="@+id/mUnit_JinShu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralChuYu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="厨余：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_ChuYu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralOther"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_Other"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mIntegralDuHai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="毒害：0积分/"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/mUnit_DuHai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textColor="@color/black_title"
                            android:textSize="@dimen/dp_6_5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_94"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_7_5"
                android:layout_marginRight="@dimen/dp_42"
                android:text="商城兑换：100积分可抵扣￥1元"
                android:textColor="#ff4242"
                android:textSize="@dimen/dp_7_5" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
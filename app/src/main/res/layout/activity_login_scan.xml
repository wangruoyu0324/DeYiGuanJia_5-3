<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_111_5"
            android:src="@drawable/bg_scan_top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_64"
            android:layout_marginBottom="@dimen/dp_27"
            android:text="扫码登录"
            android:textColor="#222222"
            android:textSize="@dimen/dp_25_5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_22_5"
                android:background="#357D79"
                android:gravity="center"
                android:text="方法一"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8_5"
                android:text="公众号登录"
                android:textColor="#222222"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23_5"
            android:layout_marginTop="@dimen/dp_7_5"
            android:text="打开微信扫码，进入公众号，获取二维码登录"
            android:textColor="#666666"
            android:textSize="@dimen/dp_10_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_23_5"
            android:layout_marginTop="@dimen/dp_20_5"
            android:layout_marginRight="@dimen/dp_23_5"
            android:layout_marginBottom="@dimen/dp_20_5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mQrcode"
                    android:layout_width="@dimen/dp_78"
                    android:layout_height="@dimen/dp_78"
                    app:failureImage="@drawable/ic_logo"
                    app:placeholderImage="@drawable/ic_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:gravity="center"
                    android:text="公众号二维码\n“扫我”"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_8_5" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_34_5"
                android:src="@drawable/ic_arrow_right_green" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_79_5"
                    android:src="@drawable/ic_step1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:gravity="center"
                    android:text="扫码进入公众号\n“德益管家”"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_8_5" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_34_5"
                android:src="@drawable/ic_arrow_right_green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_79_5"
                    android:src="@drawable/ic_step2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:gravity="center"
                    android:text="进入“垃圾投递”\n获取二维码"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_8_5" />

            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_34_5"
                android:src="@drawable/ic_arrow_right_green" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_79_5"
                    android:src="@drawable/ic_step3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_7_5"
                    android:gravity="center"
                    android:text="对准“扫码枪”\n登录成功"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_8_5" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_21_5"
            android:layout_marginRight="@dimen/dp_21_5"
            android:background="#E9E8E7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_23_5"
                    android:layout_marginTop="@dimen/dp_33"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/dp_58"
                        android:layout_height="@dimen/dp_22_5"
                        android:background="#357D79"
                        android:gravity="center"
                        android:text="方法二"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8_5"
                        android:text="德益管家APP登录"
                        android:textColor="#222222"
                        android:textSize="@dimen/dp_14" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_23_5"
                    android:layout_marginTop="@dimen/dp_8_5"
                    android:text="打开德益管家APP\n获取首页右上角二维码登录"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_10_5" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@drawable/ic_app_login" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mLayout_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mLayout_Back"
                android:layout_width="@dimen/dp_85_5"
                android:layout_height="@dimen/dp_43"
                android:background="@drawable/bg_back"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_3"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>


            <com.chuxinbuer.deyiguanjia.widget.CountDownButton
                android:id="@+id/mRemainTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="倒计时：0S"
                android:textColor="#057CD3"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
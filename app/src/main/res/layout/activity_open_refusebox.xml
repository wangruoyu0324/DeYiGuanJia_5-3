<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/mBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_193"
            app:banner_indicatorGravity="bottom|left"
            app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
            app:banner_isNumberIndicator="false"
            app:banner_pageChangeDuration="500"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointAutoPlayInterval="3000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointContainerLeftRightPadding="@dimen/dp_18"
            app:banner_pointDrawable="@drawable/banner_dot"
            app:banner_pointTopBottomMargin="@dimen/dp_10"
            app:banner_transitionEffect="accordion" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_111_5"
            android:src="@drawable/bg_scan_top" />

        <TextView
            android:id="@+id/mTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_10_5"
            android:text="厨余门已开，请投放"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_218_5"
            android:layout_marginLeft="@dimen/dp_23_5"
            android:layout_marginRight="@dimen/dp_23_5"
            android:background="#F7F7F7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_refusebox">

                <View
                    android:id="@+id/mView11"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_23_5"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_81_5"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView12"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_100_5"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_108"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView21"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_23_5"
                    android:layout_marginLeft="@dimen/dp_67_5"
                    android:layout_marginTop="@dimen/dp_81_5"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView22"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_100_5"
                    android:layout_marginLeft="@dimen/dp_67_5"
                    android:layout_marginTop="@dimen/dp_108"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView31"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_23_5"
                    android:layout_marginLeft="@dimen/dp_134_5"
                    android:layout_marginTop="@dimen/dp_107"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView32"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_76"
                    android:layout_marginLeft="@dimen/dp_134_5"
                    android:layout_marginTop="@dimen/dp_133"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView41"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_23_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_81_5"
                    android:layout_marginRight="@dimen/dp_67_5"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView42"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_100_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_108"
                    android:layout_marginRight="@dimen/dp_67_5"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView51"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_23_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_81_5"
                    android:layout_marginRight="@dimen/dp_3"
                    android:background="@drawable/anim_refusebox" />

                <View
                    android:id="@+id/mView52"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_100_5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_108"
                    android:layout_marginRight="@dimen/dp_3"
                    android:background="@drawable/anim_refusebox" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mLayout_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLayout_Back"
            android:layout_width="@dimen/dp_85_5"
            android:layout_height="@dimen/dp_43"
            android:background="@drawable/bg_back"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>


        <com.chuxinbuer.deyiguanjia.widget.CountDownButton
            android:id="@+id/mRemainTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="倒计时：0S"
            android:textColor="#057CD3"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>
</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/mBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_193"
            app:banner_indicatorGravity="bottom|left"
            app:banner_isNeedShowIndicatorOnOnlyOnePage="true"
            app:banner_isNumberIndicator="false"
            app:banner_pageChangeDuration="500"
            app:banner_pointAutoPlayAble="false"
            app:banner_pointAutoPlayInterval="3000"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointContainerLeftRightPadding="@dimen/dp_18"
            app:banner_pointDrawable="@drawable/banner_dot"
            app:banner_pointTopBottomMargin="@dimen/dp_10"
            app:banner_transitionEffect="accordion" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_111_5"
            android:src="@drawable/bg_scan_top" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_17"
                android:includeFontPadding="false"
                android:text="请选择投放类型"
                android:textColor="@color/black_textview"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/mWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTip"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_42"
                android:layout_marginRight="@dimen/dp_19_5"
                android:layout_marginBottom="@dimen/dp_10_5"
                android:includeFontPadding="false"
                android:text="本次丢弃垃圾0g"
                android:textColor="@color/black_textview2"
                android:textSize="@dimen/dp_12" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_189_5"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:layout_below="@+id/mTip"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_94"
                android:layout_marginRight="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/mLayout_ZHIZHANG1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="纸张1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mLayout_ZHIZHANG2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="纸张2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mLayout_BOLI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="玻璃"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/mLayout_FANGZHI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="纺织物"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mLayout_JINSHU"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="金属"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mLayout_SULIAO"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_weight="1"
                    android:background="@drawable/bg_blue">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginTop="@dimen/dp_6"
                            android:src="@drawable/ic_other" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:includeFontPadding="false"
                            android:text="塑料"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dp_9_5" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLayout_Dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/dp_193"
                android:layout_height="@dimen/dp_171_5"
                android:background="@drawable/shape_masker"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_34_5"
                    android:layout_height="@dimen/dp_34_5"
                    android:layout_marginTop="@dimen/dp_30"
                    android:src="@drawable/ic_tip_yellow" />

                <TextView
                    android:id="@+id/txt_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10_5"
                    android:text="您正在退出登录"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25_5"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_neg"
                        android:layout_width="@dimen/dp_51_5"
                        android:layout_height="@dimen/dp_30"
                        android:background="@drawable/shape_button_white"
                        android:gravity="center"
                        android:text="取消"
                        android:textColor="#505050"
                        android:textSize="@dimen/dp_10_5" />

                    <Button
                        android:id="@+id/btn_pos"
                        android:layout_width="@dimen/dp_96_5"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_6_5"
                        android:background="@drawable/shape_button_white"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="#057CD3"
                        android:textSize="@dimen/dp_10_5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mLayout_Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLayout_Back"
            android:layout_width="@dimen/dp_85_5"
            android:layout_height="@dimen/dp_43"
            android:background="@drawable/bg_back"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_3"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>


        <com.chuxinbuer.deyiguanjia.widget.CountDownButton
            android:id="@+id/mRemainTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="倒计时：0S"
            android:textColor="#057CD3"
            android:textSize="@dimen/dp_14" />

        <LinearLayout
            android:id="@+id/mLayout_LoginInfo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/mImage"
                android:layout_width="@dimen/dp_34_5"
                android:layout_height="@dimen/dp_34_5"
                app:failureImage="@drawable/ic_logo"
                app:placeholderImage="@drawable/ic_logo"
                app:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="刘淑华"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_8_5"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_6_5"
                        android:layout_height="@dimen/dp_6_5"
                        android:src="@drawable/ic_online" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:includeFontPadding="false"
                        android:text="在线"
                        android:textColor="#222222"
                        android:textSize="@dimen/dp_6_5" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>